pipeline {
    agent any
 
 environment {
        DOCKER_IMAGE_NAME = "marcosecs/verificacionjs"
    }
    stages {
        stage('Verificar archivos JS') {
            steps {
                script {
                    // Verificar si existen archivos JS en el proyecto
                    def jsFiles = sh(script: 'find . -name "*.js"', returnStdout: true).trim()

                    if (jsFiles) {
                        echo 'Se encontraron archivos JS en el proyecto. Iniciando deploy...'
                        currentBuild.result = 'SUCCESS'  // Configurar el resultado de la compilación como éxito
                    } else {
                        error 'No se encontraron archivos JS en el proyecto. Deteniendo la ejecución.'
                    }
                }
            }
        }

        stage('Despliegue') {
            when {
                expression { currentBuild.resultIsBetterOrEqualTo('SUCCESS') }
            }
            steps {
                script {
             
                    echo 'Realizando el deploy...'
                      docker.build(DOCKER_IMAGE_NAME)
                    docker.withRegistry('https://registry.hub.docker.com', 'dckr_pat_1m0WWo1rVrMreJYOle2_ViToRM4') {
                        docker.image(DOCKER_IMAGE_NAME).push()
                    }
                    
                }
            }
        }
    }

   
}
