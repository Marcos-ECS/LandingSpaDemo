pipeline {
    agent any
 
 environment {
        DOCKERHUB_CREDENTIALS = credentials('marcosecs')
    }
    stages {
        stage('Verificar archivos JS') {
            steps {
                script {
                    // Verificar si existen archivos JS en el proyecto
                    def jsFiles = sh(script: 'find . -name "*.js"', returnStdout: true).trim()

                    if (jsFiles) {
                        echo 'Se encontraron archivos JS en el proyecto. Iniciando deploy...'
                        currentBuild.result = 'SUCCESS'  // Configurar el resultado de la compilación como éxito
                    } else {
                        error 'No se encontraron archivos JS en el proyecto. Deteniendo la ejecución.'
                    }
                }
            }
        }

     stages {
    stage('Build') {
      steps {
        sh 'docker build -t marcosecs/dp-alpine:latest .'
      }
    }
    stage('Login') {
      steps {
        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
      }
    }
    stage('Push') {
      steps {
        sh 'docker push marcosecs/dp-alpine:latest'
      }
    }
  }
  
        
   
    }
 
   
}
