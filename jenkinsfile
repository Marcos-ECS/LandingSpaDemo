pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  environment {
    DOCKERHUB_CREDENTIALS = credentials('marcosecs')
  }
  stages {
    stage('Clonar Repositorio') {
            steps {
                // Paso para clonar el repositorio de c√≥digo fuente
                git 'https://github.com/Marcos-ECS/LandingSpaDemo'
            }
        }
    stage('Build') {
      steps {
        sh 'docker build -t marcosecs/dp-alpine:latest .'
      }
    }
    stage('Login') {
      steps {
        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
      }
    }
    stage('Push') {
      steps {
        sh 'docker push marcosecs/dp-alpine:latest'
      }
    }
  }
  
}
